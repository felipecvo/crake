require 'System'
imports System;

namespace :db do
    desc "create the database"
    task :create do
        System.Console.WriteLine("criei o banco de dados");
    end
end

namespace :tests do
    desc "run unit test"
    task :unit do
        System.Console.WriteLine("testes unitarios ok!");
    end
end

desc "global task"
task :hello_world do
	System.Console.WriteLine("Hello World!");
end